<odoo>

    <record model="ir.ui.view" id="sale_order_form_view">
        <field name="name">sale.order.form (in sale_directsale_commission_invoice)</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
               <button type="object"
                   name="action_view_commission_invoice"
                   class="oe_stat_button"
                   icon="fa-shopping-cart"
                   attrs="{'invisible': [('commission_invoice_order_count', '=', 0)]}"
                   groups="purchase.group_purchase_user">
                   <field name="commission_invoice_order_count" widget="statinfo" string="Commission Invoices"/>
               </button>
            </xpath>
        </field>
        <field name="active" eval="False"/>
    </record>

</odoo>
