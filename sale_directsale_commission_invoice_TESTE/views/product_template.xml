<odoo>

    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.form (in sale_directsale_commission_invoice)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='bill']" position="before">
                <group string="Reordering" attrs="{'invisible': [('type','!=','service')]}">
                    <field name="service_to_commission_invoice"/>
                </group>
            </xpath>
        </field>
    </record>



</odoo>
